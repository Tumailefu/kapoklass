/**index.wxss**/
page{
  height: 100%;
}


.container{
   height: 100%;
   background: #F5F5F5;
}

.userinfo{
    margin-top: 40rpx;
    height: 200rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}
.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
}
/* 共享view样式*/
.userstyle {
  padding: 25rpx 40rpx;
  background: #fff;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-style: solid;
  border-color: #F5F5F5;
  display: flex;
  align-items: center;

}
/* 共享view里面的text样式*/
.userTextStyle {
  color: #4a4a4a;
  font-size: 26rpx;
  line-height: 1.42857;
  flex: 1;
}
/* 共享右箭头设置*/
.righthead:after{
  content: '';
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A3A3A3;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;
}
.user-settings {
  border-width: 17rpx 0rpx 10rpx 0rpx;
  border-style: solid;
  border-color: #EFEFF5;
  display: flex;
  align-items: center;
}
