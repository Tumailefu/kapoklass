/* pages/class/news/news.wxss */
.page {
  overflow-y: hidden;
}

.list-left-menu {
  width: 160rpx;
  font-size: 28rpx;
  position: absolute;
  left: 0px;
  z-index: 10;
}

.list-left-menu-box-unselected {
  padding: 10rpx;
  border-bottom: 2rpx solid #e3e3e3;
  height: 72rpx;
  color: #6c6c6c;
  background: #f9f9f9;
}

.list-left-menu-box-selected {
  padding: 10rpx;
  height: 72rpx;
  color: #ff9c35;
  border-left: 3px solid #ff9c35;
  background: white;
}

.list-menu-name {
  text-align: center;
  margin-top: 14rpx;
}

.list-tab {
  margin-left: 170rpx;
  font-size: 25rpx;
  background: #f3f4f6;
  color: #cbcccf;
  padding: 2px;
}

.content-list {
  margin-left: 170rpx;
  height: 180rpx;
  display: flex;
  border-bottom: 1px solid #e3e3e3;
  position: relative;
}

.issue-name {
  width: 560rpx;
  font-size: 35rpx;
  margin-top: 30rpx;
}
.submit {
  position: absolute;
  right: 400rpx;
  bottom: 5rpx;
  color: #6c6c6c;
  margin-top: 30rpx;
  font-size: 20rpx;
}

.Time {
  position: absolute;
  right: 30rpx;
  bottom: 5rpx;
  color: #6c6c6c;
  margin-top: 30rpx;
  font-size: 20rpx;
}

.details {
  margin-top: 20rpx;
  color: #6c6c6c;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;   
  top: 0;  
  left: 0;  
  z-index: 1000;  
   background: #000;   
  opacity: 0.5;  
  overflow: hidden;  
}  
.drawer_box_ad { 
  margin-left: 7%; 
  width: 86%; 
  overflow: hidden;  
  position: fixed;  
  top: 15%; 
  z-index: 1001;  
  background: #FFFFFF;  
  border-radius: 4px;
}


.drawer_content_ad {  
  height: 289px;
  width: 100%;
  padding: 10px;
}

.select-line-nav{
  font-size:12px;
  margin-left:5px;
  margin-top:10px;
  color:#ABABAB;
}
.select-price{
  font-size:14px;
  color:#FF9C35;
  margin-top:20px;
  display:flex;
  align-items: center;
  margin-left:10px;
}